---
import { headerLinks, headerCTA } from '../config/header-footer';
---

<div class="burger-menu">
  <button id="burger-toggle" class="burger-toggle" aria-label="Toggle menu">
    <span class="burger-line"></span>
    <span class="burger-line"></span>
    <span class="burger-line"></span>
  </button>
  <nav id="mobile-nav" class="mobile-nav">
    <ul>
      {headerLinks.map((item) => (
        <li>
          {item.children ? (
            <div>
              <span class="mobile-link">{item.text}</span>
              <ul class="ml-4">
                {item.children.map((subItem) => (
                  <li>
                    <a href={subItem.href} class="mobile-link">{subItem.text}</a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <a href={item.href} class="mobile-link">{item.text}</a>
          )}
        </li>
      ))}
    </ul>
    <div class="mt-6">
      <a href={headerCTA.href} class="mobile-cta">
        {headerCTA.text}
      </a>
    </div>
  </nav>
</div>

<script>
  const burgerToggle = document.getElementById('burger-toggle');
  const mobileNav = document.getElementById('mobile-nav');
  const body = document.body;

  function toggleMenu() {
    mobileNav?.classList.toggle('active');
    burgerToggle?.classList.toggle('active');
    body.classList.toggle('menu-open');
  }

  burgerToggle?.addEventListener('click', toggleMenu);

  // Fermer le menu si on clique en dehors
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('.burger-menu') && mobileNav?.classList.contains('active')) {
      toggleMenu();
    }
  });

  // EmpÃªcher la propagation du clic dans le menu mobile
  mobileNav?.addEventListener('click', (event) => {
    event.stopPropagation();
  });
</script>

<style>
  .burger-menu {
    display: none;
  }
  @media (max-width: 768px) {
    .burger-menu {
      display: block;
    }
  }
  .burger-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 20px;
    position: relative;
    z-index: 1000;
  }
  .burger-line {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--main-color);
    position: absolute;
    left: 0;
    transition: all 0.3s;
  }
  .burger-line:nth-child(1) { top: 0; }
  .burger-line:nth-child(2) { top: 50%; transform: translateY(-50%); }
  .burger-line:nth-child(3) { bottom: 0; }
  .burger-toggle.active .burger-line:nth-child(1) { transform: translateY(9px) rotate(45deg); }
  .burger-toggle.active .burger-line:nth-child(2) { opacity: 0; }
  .burger-toggle.active .burger-line:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(26, 26, 26, 0.95);
    padding: 5rem 2rem 2rem;
    z-index: 999;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
  }
  .mobile-nav.active {
    transform: translateX(0);
  }
  .mobile-nav ul {
    list-style-type: none;
    padding: 0;
  }
  .mobile-nav li {
    margin-bottom: 1rem;
  }
  .mobile-link {
    color: var(--main-color);
    text-decoration: none;
    font-size: 1.2rem;
    display: block;
    padding: 0.5rem 0;
  }
  .mobile-cta {
    display: block;
    background-color: var(--main-color);
    color: white;
    text-align: center;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    font-weight: bold;
    margin-top: 1rem;
  }
  body.menu-open {
    overflow: hidden;
  }
</style>
