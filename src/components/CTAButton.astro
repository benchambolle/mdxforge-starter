---
import type { IconDefinition } from '@fortawesome/fontawesome-svg-core';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';

interface Props {
  href: string;
  text: string;
  variant: 'primary' | 'secondary';
  className?: string;
  icon?: IconDefinition;
  iconPosition?: 'left' | 'right';
}

const { href, text, variant, className = '', icon, iconPosition = 'left' } = Astro.props;

const baseClasses = "font-bold py-2 px-6 rounded-lg transition-all duration-300 text-sm sm:text-base inline-flex items-center cursor-pointer";
const variantClasses = {
  primary: "bg-main-color text-white hover:bg-white hover:text-main-color border-2 border-main-color",
  secondary: "bg-white text-main-color hover:bg-main-color hover:text-white border-2 border-main-color",
};
---

<a href={href} class={`cta-button ${baseClasses} ${variantClasses[variant]} ${className}`}>
  {icon && iconPosition === 'left' && (
    <FontAwesomeIcon icon={icon} className={`w-4 h-4 ${text ? 'mr-2' : ''}`} />
  )}
  {text}
  {icon && iconPosition === 'right' && (
    <FontAwesomeIcon icon={icon} className={`w-4 h-4 ${text ? 'ml-2' : ''}`} />
  )}
</a>

<style>
  .cta-button.primary {
    background-color: var(--main-color);
    color: white;
    border: 2px solid var(--main-color);
  }
  .cta-button.primary:hover {
    background-color: white;
    color: var(--main-color);
  }
  .cta-button.secondary {
    background-color: white;
    color: var(--main-color);
    border: 2px solid var(--main-color);
  }
  .cta-button.secondary:hover {
    background-color: var(--main-color);
    color: white;
  }
</style>
