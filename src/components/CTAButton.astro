---
import { siteConfig } from '../config/siteconfig';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import type { IconDefinition } from '@fortawesome/fontawesome-svg-core';

interface Props {
  href: string;
  text: string;
  variant?: 'primary' | 'secondary' | 'third';
  className?: string;
  icon?: IconDefinition;
  iconPosition?: 'left' | 'right';
}

const { href, text, variant = 'primary', className = '', icon, iconPosition = 'left' } = Astro.props;

const baseClasses = "font-bold py-2 px-6 rounded-lg transition-all duration-300 text-sm sm:text-base inline-flex items-center cursor-pointer";
const variantClasses = {
  primary: "bg-main-color text-white hover:bg-white hover:text-main-color border-2 border-transparent hover:border-main-color",
  secondary: "bg-white text-main-color hover:bg-main-color hover:text-white border-2 border-main-color",
  third: "bg-transparent text-main-color border-2 border-main-color hover:bg-main-color hover:text-white"
};
---

<a href={href} class={`${baseClasses} ${variantClasses[variant]} ${className}`}>
  {icon && iconPosition === 'left' && (
    <FontAwesomeIcon icon={icon} className={`w-4 h-4 ${text ? 'mr-2' : ''}`} />
  )}
  {text}
  {icon && iconPosition === 'right' && (
    <FontAwesomeIcon icon={icon} className={`w-4 h-4 ${text ? 'ml-2' : ''}`} />
  )}
</a>

<style>
  a {
    --main-color: var(--mainColor);
  }
  .bg-main-color {
    background-color: var(--main-color);
  }
  .text-main-color {
    color: var(--main-color);
  }
  .hover\:bg-main-color:hover {
    background-color: var(--main-color);
  }
  .hover\:text-main-color:hover {
    color: var(--main-color);
  }
  .hover\:border-main-color:hover {
    border-color: var(--main-color);
  }
  .border-main-color {
    border-color: var(--main-color);
  }
  a:hover {
    text-decoration: none;
  }
</style>
