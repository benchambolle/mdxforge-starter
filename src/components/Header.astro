---
import { headerLinks } from '../config/header-footer';
import { siteConfig } from '../config/siteconfig';
import BurgerMenu from './BurgerMenu.astro';
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/" class="text-xl font-bold flex items-center">
      {siteConfig.logoPath ? (
        <img src={siteConfig.logoPath} alt={siteConfig.siteName} class="h-6 mr-2" />
      ) : (
        <span class="text-main-color">{siteConfig.siteName}</span>
      )}
    </a>
    <nav class="hidden md:block">
      <ul class="flex space-x-6">
        {headerLinks.map((link) => (
          <li>
            <a href={link.href} class="text-gray-600 hover:text-main-color transition duration-300">{link.text}</a>
          </li>
        ))}
      </ul>
    </nav>
    <BurgerMenu />
  </div>
</header>

<style define:vars={{ mainColor: siteConfig.mainColor }}>
  .text-main-color {
    color: var(--mainColor);
  }
</style>
