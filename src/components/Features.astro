---
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { IconDefinition } from '@fortawesome/fontawesome-svg-core';

interface Props {
  icon: IconDefinition;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="feature-card bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-300">
  <div class="flex flex-col items-center text-center">
    <div class="mb-4 text-main-color">
      <FontAwesomeIcon icon={icon} className="w-12 h-12" />
    </div>
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</div>

<style>
  .text-main-color {
    color: var(--main-color);
  }
</style>
