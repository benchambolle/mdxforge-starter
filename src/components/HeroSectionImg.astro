---
import { siteConfig } from '../config/siteconfig';

interface Props {
  title: string;
  subtitle: string;
  backgroundImage: string;
  primaryButtonText: string;
  primaryButtonLink: string;
  secondaryButtonText: string;
  secondaryButtonLink: string;
}

const { 
  title, 
  subtitle, 
  backgroundImage, 
  primaryButtonText, 
  primaryButtonLink, 
  secondaryButtonText, 
  secondaryButtonLink 
} = Astro.props;
---

<section class="hero-section relative flex items-center justify-center min-h-screen py-24 px-4">
  <div class="absolute inset-0 z-0">
    <img src={backgroundImage} alt="Background" class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-main-color opacity-90"></div>
  </div>
  
  <div class="relative z-10 text-center max-w-3xl">
    <h1 class="text-5xl md:text-6xl font-bold mb-6 text-white">{title}</h1>
    <p class="text-xl md:text-2xl mb-12 text-white">{subtitle}</p>
    <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
      <a href={primaryButtonLink} class="primary-button bg-white text-main-color font-bold py-3 px-8 rounded-full transition-all duration-300">
        {primaryButtonText}
      </a>
      <a href={secondaryButtonLink} class="secondary-button bg-transparent border-2 border-white text-white font-bold py-3 px-8 rounded-full transition-all duration-300">
        {secondaryButtonText}
      </a>
    </div>
  </div>
</section>

<style define:vars={{ mainColor: siteConfig.mainColor }}>
  .text-main-color {
    color: var(--mainColor);
  }
  .bg-main-color {
    background-color: var(--mainColor);
  }
  .primary-button:hover {
    background-color: var(--mainColor);
    color: white;
  }
  .secondary-button:hover {
    background-color: white;
    color: var(--mainColor);
  }
</style>
